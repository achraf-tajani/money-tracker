### D√©but d'un nouveau cycle
```typescript
async function demarrerNouveauCycle(userId: string, salaire: number) {
  const aujourd'hui = new Date();
  const premierJour = startOfMonth(aujourd'hui);
  const dernierJour = endOfMonth(aujourd'hui);
  
  // 1. Cl√¥turer le cycle pr√©c√©dent s'il existe
  await cloturerCycleActif(userId);
  
  // 2. Cr√©er nouveau cycle
  const nouveauCycle = {
    user_id: userId,
    annee: aujourd'hui.getFullYear(),
    mois: aujourd'hui.getMonth() + 1,
    salaire_reel: salaire,
    total_charges: await calculerTotalCharges(userId),
    total_depenses: 0,
    reste: salaire - await calculerTotalCharges(userId),
    statut: 'actif',
    date_debut: premierJour,
    date_fin: dernierJour,
  };
  
  return await supabase.from('cycles_mensuels').insert(nouveauCycle);
}
